    if ! [ -x "$(command -v lsd)" ]; then
        nix-env -iA nixpkgs.lsd
    fi
if [ -x "$(command -v exa)" ]; then
    alias ls='exa -aF'
    alias l='exa -aF'
    alias la='exa -laF'
    alias ll='exa -laF'
    alias lsd='exa -laF --only-dirs'
else
    alias ls='ls -aF'
    alias l='ls -AF'
    alias la=' -lAF'
    alias ll='ls -lAF'
fi
if [ -x "$(command -v lsd)" ]; then
    alias ls='lsd -aF'
    alias l='lsd -aF'
    alias la='lsd -laF'
    alias ll='lsd -laF'
fi


