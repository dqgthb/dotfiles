export LANG=C.utf8
export LANGUAGE=C
export LC_ALL=C.utf8
echo "This is $0 with LVL $SHLVL, defaults to $SHELL"

# Auto-run tmux if not on SSH
if [ -z "$SSH_CONNECTION" ] && [ "$TERM_PROGRAM" != "vscode" ]; then
    # Check if tmux is runnin:g
    if ! command -v tmux &>/dev/null; then
        echo "tmux is not installed. Please install tmux to use this feature."
    else
        if [ -z "$TMUX" ]; then
            if [ -z "$(tmux ls)" ]; then
                tmux new-session -s mysession
            else
                tmux attach-session -t mysession || tmux new-session -s mysession
            fi
        fi
    fi
fi

